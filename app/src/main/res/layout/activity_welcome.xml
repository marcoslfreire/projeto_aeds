<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/back_principal"
    android:onClick="startMainActivity">


    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@mipmap/projeto_aedess"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:id="@+id/welcome_text_view"
        android:layout_width="383dp"
        android:layout_height="52dp"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Bem vindo ao PROJETO AEDES"
        android:textColor="#3f51b5"
        android:textStyle="bold"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="71dp" />

    <Button
        android:id="@+id/welcome_ok_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:text="Informações"
        android:background="@drawable/styles_edit_text"
        android:textStyle="bold"
        android:layout_below="@+id/welcome_text_view"
        android:layout_alignRight="@+id/welcome_text_view"
        android:layout_alignEnd="@+id/welcome_text_view"
        android:layout_marginTop="44dp" />

</RelativeLayout>